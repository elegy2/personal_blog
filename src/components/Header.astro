---
import Navigation from "./Navigation.astro";
import ThemeIcon from "./ThemeIcon.astro";
import Hamburger from "./Hamburger.astro";
---

<header class="site-header">
  <nav class="nav-bar">
    <div class="nav-left">
      <Hamburger />
      <ThemeIcon />
    </div>
    <Navigation />
  </nav>
</header>

<style>
  .site-header {
    width: 100%;
    top: 0;
    left: 0;
    z-index: 100;
  }

  .nav-bar {
    display: flex;
    align-items: center;
    justify-content: space-between; /* 左右分布 */
    padding: 0.5rem 1.5rem;
  }

  .nav-left {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  /* 调整 Navigation 右对齐 */
  .nav-links {
    display: flex;
    gap: 2rem;
  }

  .nav-links a {
    position: relative;
    text-decoration: none;
    font-size: 1rem;
    font-weight: 500;
    color: #444;
    padding: 0.5rem 0.75rem;
    border-radius: 6px;
    transition: all 0.3s ease;
  }

  /* hover 时背景 + 箭头 */
  .nav-links a:hover {
    background: rgba(92, 124, 250, 0.12); /* 浅蓝透明背景 */
    color: #5c7cfa;
  }

  .nav-links a::after {
    content: "➤"; /* 箭头符号 */
    position: absolute;
    right: -1.2rem;
    opacity: 0;
    color: #5c7cfa;
    font-size: 0.85rem;
    transition:
      opacity 0.3s ease,
      transform 0.3s ease;
    transform: translateX(-5px);
  }

  .nav-links a:hover::after {
    opacity: 1;
    transform: translateX(0);
  }
</style>
