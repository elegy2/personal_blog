---
import BaseLayout from "../layouts/BaseLayout.astro";
import Live2DWithCards from "../components/Live2DWithCards.jsx";

const pageTitle = "Live2D 展示";
---

<BaseLayout pageTitle={pageTitle}>
  <div class="live2d-showcase">
    <Live2DWithCards client:load />
  </div>
</BaseLayout>

<style>
  .live2d-showcase {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem; /* Live2D和卡牌之间的间隔 */
    padding: 2rem;
  }
</style>
